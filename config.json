{
  "git": {
    "auto_push": false,
    "default_commit_message": "Update: {timestamp}",
    "remote": "origin"
  },
  "schedule": {
    "enabled": false,
    "interval_hours": 24
  },
  "files": {
    "track_changes": true,
    "ignore_patterns": [
      "*.pyc",
      "__pycache__",
      ".env",
      ".git"
    ]
  },
  "watcher": {
    "auto_message": true,
    "auto_push": false,
    "debounce_seconds": 5,
    "ignore_patterns": [".pyc", ".pyo", ".pyd", ".log", ".tmp"],
    "ignore_dirs": [".git", "__pycache__", "venv", "env", ".venv", "node_modules"]
  }
}

